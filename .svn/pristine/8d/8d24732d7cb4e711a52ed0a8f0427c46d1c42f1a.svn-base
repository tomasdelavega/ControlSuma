/**
 * Método para limpiar los filtros de la página de listado de Personas
 */

$(document).ready(function(){
	$('#btnReset').bind('click', function(){
		$('#inputCodPersona').prop('value','');
		$('#inputCodJira').prop('value','');
		$('#inputNombre').prop('value','');
		$('#inputPrimerApellido').prop('value','');
		$('#inputSegundoApellido').prop('value','');
		$('#inputRol').prop('value','');
	});
});

